<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Nome/Razão Social" %>
  </div>
  <%= f.fields_for :version do |version_fields| %>

    <div class="form-group">
      <%= version_fields.label :description %><br>
      <%= version_fields.text_field :description, class: "form-control", placeholder: "Versão" %>
    </div>

  <% end %>
  <div class="text-center">
    <%= link_to t('buttons.back'), customers_path, class: "btn btn-danger" %>
    <%= f.submit t('buttons.submit'), class: "btn btn-success" %>
  </div>
<% end %>
